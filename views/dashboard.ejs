<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Kruger - Itens</title>
  <link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"/>
  <style>
    a{
      text-decoration: none;
      text-transform: none;
      color: black;
    }
  </style>



  <link rel="stylesheet" href="/css/dashboard.css" />
</head>
<body>

<header class="top-bar">
  <div class="logo">
    <img src="/images/logo.png" alt="Krüger Embalagens" class="logo">
  </div>

  <div class="user">
    <%= name %>
    <a style="color: white;" href="/users/logout">
      <i class="bi bi-box-arrow-right"></i>
    </a>
  </div>
</header>

<main class="container">

  <section class="filters">
    <h2>Filtros de Pesquisa</h2>

    <div class="filter-buttons">

        <button class="filter">
            <i class="bi bi-building"></i> Empresa
        </button>

        <button class="filter">
            <i class="bi bi-box-seam"></i> Sem estoque
        </button>

        <button class="filter">
            <i class="bi bi-person-plus"></i> Vendedor
        </button>

        <button class="filter">
            <i class="bi bi-check2-circle"></i> Já pedido
        </button>
    </div>

    <button class="add-item">
      <a href="/product/add">
        <i class="bi bi-plus-circle"></i>
        Adicionar um item
      </a>
    </button>
        <a href="/brand/add" class="add-item">
        <i class="bi bi-plus-circle"></i>
        Adicionar uma empresa
        </a>
  </section>

  <section class="items">
    <h2>Últimos itens adicionados</h2>

    <div class="items-header">
      <span>Empresa</span>
      <span>Descrição</span>
      <span>Restante</span>
      <span>Notificador</span>
      <span>Ações</span>
    </div>

    <% products.forEach(p => { %>
    <div class="item">
        <span><%= p.dataValues.brandName %></span>
        <span><%= p.name %></span>
        <span><%= p.quantity %></span>
        <span><%= p.identifier %></span>
        <div class="actions">
          <a href="#">
            <button title="Editar">
                <i class="bi bi-pencil-square"></i>
            </button>
          </a>  
          <a href="/product/delete/<%= p.id %>">
            <button title="Excluir">
                <i class="bi bi-trash"></i>
            </button>
          </a>
       </div>
    </div>
    <% }) %>
  </section>

</main>

</body>
</html>
